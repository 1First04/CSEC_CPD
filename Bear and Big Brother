#include<bits/stdc++.h>
#include<iostream>
#include<cmath>
 using namespace std;
  int main(){
   int LimakWeigh , BobWeigh;
   cin>>LimakWeigh >> BobWeigh;
   for(int i=1; i<=10; i++){
    int a= LimakWeigh*pow(3,i);
    int b= BobWeigh*pow(2,i);
    if (a>b){
        cout<<i;
        break;
    }
   }
     return 0;
  }
